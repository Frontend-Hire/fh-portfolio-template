---
import ExternalLink from "./ExternalLink.astro";

type Props = {
  url: string;
  name: string;
  time: string;
  description?: string;
};

const { url, name, time, description = "" } = Astro.props;
---

<div
  class='flex flex-col gap-1 rounded p-1 hover:bg-hover dark:hover:bg-hover-dark'
>
  <div class='flex justify-between'>
    <h2><ExternalLink url={url}>{name}</ExternalLink></h2>
    <small class='text-sm text-secondary dark:text-secondary-dark'>{time}</small
    >
  </div>
  {
    description.trim() && (
      <p class='text-sm text-secondary dark:text-secondary-dark'>
        {description.trim()}
      </p>
    )
  }
</div>
