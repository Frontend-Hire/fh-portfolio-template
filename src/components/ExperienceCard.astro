---
import ExternalLink from "./ExternalLink.astro";

type Props = {
  url: string;
  name: string;
  time: string;
  description?: string;
};

const { url, name, time, description = "" } = Astro.props;
---

<div class='flex flex-col gap-1 rounded-sm p-1'>
  <div class='flex justify-between'>
    <h2><ExternalLink url={url}>{name}</ExternalLink></h2>
    <small class='text-secondary text-sm'>{time}</small>
  </div>
  {
    description.trim() && (
      <p class='text-secondary text-sm'>{description.trim()}</p>
    )
  }
</div>
