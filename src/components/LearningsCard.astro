---
type Props = {
  url: string;
  name: string;
  time: string;
};

const { url, name, time } = Astro.props;
---

<div class='flex flex-col gap-1 rounded-sm p-1'>
  <h2>
    <a class='hover:text-hover underline underline-offset-4' href={url}>
      {name}
    </a>
  </h2>
  <small class='text-secondary text-sm'>{time}</small>
</div>
