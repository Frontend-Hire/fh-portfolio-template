---
type Props = {
  url: string;
  name: string;
  time: string;
};

const { url, name, time } = Astro.props;
---

<div class='flex flex-col gap-1 rounded p-1 hover:bg-hover'>
  <h2><a class='underline underline-offset-4' href={url}>{name}</a></h2>
  <small class='text-sm text-secondary'>{time}</small>
</div>
