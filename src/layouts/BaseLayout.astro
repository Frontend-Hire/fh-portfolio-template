---
import Header from "@components/Header.astro";
import MainHead from "@components/MainHead.astro";
import { slide, ViewTransitions } from "astro:transitions";
import ThemeToggle from "@components/ThemeToggle";

type Props = {
  title?: string | undefined;
  description?: string | undefined;
};

const { title, description } = Astro.props;
---

<html lang='en'>
  <head>
    <MainHead title={title} description={description} />
    <ViewTransitions fallback='swap' />
  </head>
  <body
    class='bg-white text-primary transition-colors duration-700 dark:bg-primary-dark dark:text-white'
  >
    <div class='mx-auto flex max-w-xl flex-col gap-8 px-4 py-16'>
      <Header />
      <main transition:animate={slide({ duration: 600 })}>
        <slot />
      </main>
      <ThemeToggle client:load />
    </div>
  </body>
</html>
