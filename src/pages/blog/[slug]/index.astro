---
import { getCollection } from "astro:content";
import { getSlug } from "../../../utils";
import BaseLayout from "../../../layouts/BaseLayout.astro";

export const prerender = true;

type Props = Awaited<ReturnType<typeof getStaticPaths>>[number]["props"];

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");

  return blogEntries.map((post) => ({
    params: { slug: getSlug(post.data.title) },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.publishDate).toLocaleDateString(
  "en-us",
  {
    year: "numeric",
    month: "long",
    day: "numeric",
  },
);
---

<BaseLayout>
  <article class='flex flex-col gap-5'>
    <div class='flex flex-col gap-1'>
      <h1>{post.data.title}</h1>
      <small class='text-sm text-secondary'>{formattedDate}</small>
      {
        post.data.description?.trim() && (
          <p class='text-sm text-secondary'>{post.data.description.trim()}</p>
        )
      }
    </div>
    <Content />
  </article>
</BaseLayout>
